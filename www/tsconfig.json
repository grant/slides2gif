{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": ".",
    "sourceMap": false,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
