<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>slides2gif</title>
</head>
<body>
  <h2><a href="<%= authURL %>">Login</a></h2>
  <h2>Generate GIF from Slides:</h2>
  <form id="requestGIFform">
    <label for="presentationurl">Presentation URL:</label>
    <input id="presentationurl" name="presentationurl"><br>
    <input type="hidden" id="token" name="token">
    <input type="submit" value="Submit" onsubmit="onsubmit">
  </form>

  <script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"></script>
  <script>
    $(() => {
      document.getElementById('token').value = window.localStorage.getItem('code');
        $('#requestGIFform').submit((e) => {
          e.preventDefault();
          $.ajax({
              url: '/requestGIF',
              type: 'post',
              data: $('#requestGIFform').serialize(),
              success: (data) => {
                // https://github.com/kamranahmedse/jquery-toast-plugin
                let text = data.success ? 'Processing...' : 'Failed request.';
                if (data.success) {
                  text += `<br>Pub/Sub Message: ${data.messageid}`;
                  text += `<br>Presentation: ${data.presentationid}`;
                }
                $.toast({
                  heading: 'Success',
                  text,
                  hideAfter: 10000,
                  showHideTransition: 'slide',
                  icon: 'success'
                });
              },
              error: () => {
                $.toast({
                  heading: 'Error',
                  text: 'Some error',
                  hideAfter: 10000,
                  showHideTransition: 'slide',
                  icon: 'error'
                });
              }
          });
      });
    });
  </script>
  
  <!-- TOAST -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css">
</body>
</html>