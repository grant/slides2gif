# Justfile for slides2gif scripts
# Install just: https://github.com/casey/just

# Default: show available commands
default:
    just --list

# Install dependencies
install:
    npm install

# Run cleanup-jpg script
# Usage: just cleanup-jpg [--yes]
cleanup-jpg args:
    npm run cleanup-jpg -- {{args}}

# Run cleanup-jpg script (skip confirmation)
cleanup-jpg-yes:
    npm run cleanup-jpg:yes
